
@Styles.Render("~/Styles/Fields/Fields.css")
@*@Model List<FieldInformation>*@

<div class="fields-content">
    @for (int i = 0; i < Model.Count; i++)
    {
        <a class="field-panel" href="@Url.Action("FieldExtension", "Fields", @Model[i])">
            <div class="panel-image">
                @*<img src="../../Resources/Images/boisko_panel.jpg" alt="Aparat" />*@
            </div>
            <div class="panel-description">
                <div class="desc-main"><p>@Model[i].F_Name</p></div>
                <div class="desc-extend">
                    <p>
                        Adres: @Model[i].A_Street @Model[i].A_Number, @Model[i].A_ZipCode @Model[i].A_City <br />
                        Oświetlenie: @Model[i].F_Light<br />
                        Wypożyczalnia: @Model[i].F_Rental <br />
                        Otwarte: @Model[i].FI_OpenDays <br />
                        Możliwość rezerwacji: @Model[i].F_BookingPossibility<br />
                    </p>
                </div>
            </div>
         </a>
    }



</div>



